<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 file:/archetype.xsd">

    <output>
        <model>
            <list key="dependencies">
                <map if="${media-support.json.provider} == jsonb">
                    <value key="groupId">io.helidon.media</value>
                    <value key="artifactId">helidon-media-jsonb</value>
                </map>
                <map if="${media-support.json.provider} == jackson">
                    <value key="myGroupID">io.helidon.media</value>
                    <value key="myArtifactId">helidon-media-jackson</value>
                    <value key="groupId"    template="mustache">{{myGroupID}}</value>
                    <value key="artifactId" template="mustache">{{myArtifactId}}</value>
                </map>
            </list>
            <map key="build">
                <list key="plugins">
                    <map>
                        <map key="plugin">
                            <value key="myGroupID">org.apache.maven.plugins</value>
                            <value key="groupId" template="mustache">{{myGroupID}}</value>
                            <value key="artifactId">maven-dependency-plugin</value>
                            <map key="executions">
                                <value key="myId">copy-libs</value>
                                <value key="id" template="mustache">{{myId}}</value>
                            </map>
                        </map>
                    </map>
                    <map>
                        <list key="plugin">
                            <map>
                                <value key="groupId">io.helidon.build-tools</value>
                                <value key="artifactId">helidon-maven-plugin</value>
                                <map key="executions">
                                    <value key="myId">third-party-license-report</value>
                                    <value key="id" template="mustache">{{myId}}</value>
                                </map>
                            </map>
                        </list>
                    </map>
                </list>
            </map>
        </model>
    </output>

</archetype-script>